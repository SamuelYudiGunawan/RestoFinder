<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#26438F"
    tools:context=".LoginActivity">

    <TextView
        android:layout_width="121dp"
        android:layout_height="48dp"
        android:layout_marginLeft="180dp"
        android:layout_marginTop="60dp"
        android:fontFamily="@font/cbold"
        android:text="Resto"
        android:textColor="#EC6A2E"
        android:textSize="36dp" />

    <TextView
        android:layout_width="121dp"

        android:layout_height="48dp"
        android:layout_marginLeft="195dp"
        android:layout_marginTop="100dp"
        android:fontFamily="@font/cbold"
        android:text="Finder"
        android:id="@id/finder"
        android:textColor="#EC6A2E"
        android:textSize="36dp" />

    <ImageView

        android:layout_width="112dp"
        android:layout_height="109dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="60dp"
        android:src="@drawable/logo" />


    <ImageView

        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginLeft="-10dp"
        android:layout_alignParentBottom="true"
        android:src="@drawable/astronaut" />

    <LinearLayout
        android:id="@+id/loginbox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/finder"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="80dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/input_container_login_style"
        android:orientation="vertical"
        android:paddingBottom="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="13dp"
            android:fontFamily="@font/cbold"
            android:text="Log In"
            android:textColor="#EC6A2E"
            android:textSize="30dp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30dp"
            android:layout_marginVertical="8dp"
            android:background="@drawable/input_box_login_style">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:layout_marginHorizontal="10dp"
                android:src="@drawable/mail" />

            <EditText
                android:id="@+id/Email"
                android:layout_width="match_parent"
                android:maxLines="1"
                android:layout_height="53dp"
                android:background="#00000000"
                android:fontFamily="@font/clight"
                android:hint="E-mail"
                android:paddingHorizontal="8dp"
                android:textColorHint="@color/white"
                android:textSize="22dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30dp"
            android:layout_marginVertical="8dp"
            android:background="@drawable/input_box_login_style">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:layout_marginHorizontal="10dp"
                android:src="@drawable/password" />

            <EditText
                android:id="@+id/password"
                android:layout_width="match_parent"
                android:maxLines="1"
                android:layout_height="53dp"
                android:background="#00000000"
                android:fontFamily="@font/clight"
                android:hint="Password"
                android:inputType="textPassword"
                android:paddingHorizontal="8dp"
                android:textColorHint="@color/white"
                android:textSize="22dp" />


        </LinearLayout>


    </LinearLayout>

    <Button
        android:id="@+id/loginBtn"
        android:layout_width="85dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/loginbox"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="5dp"
        android:backgroundTint="#EC6A2E"
        android:fontFamily="@font/cbold"
        android:text="login"
        app:cornerRadius="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/loginbox"
        android:layout_marginLeft="130dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/clight"
        android:text="or"
        android:textColor="@color/white"
        android:textSize="18dp" />


    <TextView
        android:id="@+id/createText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/loginbox"
        android:layout_marginLeft="160dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/cbold"
        android:text="Create New Account"
        android:textColor="#EC6A2E"
        android:textSize="18dp" />
</RelativeLayout>