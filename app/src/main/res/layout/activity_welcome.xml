<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#26438F"
    tools:context=".WelcomeActivity">


    <TextView
        android:layout_width="296dp"
        android:layout_height="90dp"
        android:id="@+id/astrotext"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/cbold"
        android:text="Let the Astro find Resto for you..."
        android:layout_marginTop="70dp"
        android:textColor="@color/white"
        android:textSize="32dp"/>

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/astrotext"
        android:layout_marginHorizontal="57dp"
        android:backgroundTint="#EC6A2E"
        android:fontFamily="@font/cbold"
        android:text="Continue" />

    <ImageView
        android:layout_width="460dp"
        android:layout_height="472dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:src="@drawable/gambar" />

</RelativeLayout>