<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#26438F"
    tools:context=".VerifyActivity">

    <TextView
        android:id="@+id/welcometext"
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:layout_marginLeft="55dp"
        android:layout_marginTop="80dp"
        android:fontFamily="@font/cbold"
        android:text="Welcome!"
        android:textColor="#EC6A2E"
        android:textSize="21dp" />

    <TextView
        android:id="@+id/astrotext"
        android:layout_width="296dp"
        android:layout_height="90dp"
        android:layout_below="@id/welcometext"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-7dp"
        android:fontFamily="@font/cbold"
        android:text="Please Verify Your Email Address First"
        android:textColor="@color/white"
        android:textSize="32dp" />

    <Button
        android:id="@+id/verifybutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/astrotext"
        android:layout_marginHorizontal="50dp"
        android:backgroundTint="#EC6A2E"
        android:fontFamily="@font/cbold"
        android:text="Verify" />

    <TextView
        android:id="@+id/wrongpassword"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_below="@id/astrotext"
        android:layout_marginLeft="170dp"
        android:fontFamily="@font/cbold"
        android:text="Wrong Email? Click Here"
        android:textColor="#EC6A2E"
        android:layout_marginTop="10dp"
        android:textSize="16dp" />

<!--    <Button-->
<!--        android:id="@+id/continuebutton"-->
<!--        android:layout_width="wrap_content"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:layout_below="@+id/astrotext"-->
<!--        android:layout_marginLeft="230dp"-->
<!--        android:backgroundTint="#EC6A2E"-->
<!--        android:fontFamily="@font/cbold"-->
<!--        android:text="Continue" />-->

    <ImageView
        android:layout_width="460dp"
        android:layout_height="472dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:src="@drawable/gambar" />

</RelativeLayout>